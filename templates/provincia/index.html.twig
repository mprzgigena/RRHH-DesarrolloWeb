{% extends 'base.html.twig' %}

{% block title %}Pais index{% endblock %}

{% block body %}
<div class="container">
    <h1>Provincias</h1>


    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Pais</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for provincia in provincias %}
            <tr>
                <td>{{ provincia.id }}</td>
                <td>{{ provincia.nombre }}</td>
                <td>{{ provincia.pais }}</td>

                <td>
                    <a href="{{ path('app_pais_show', {'id': provincia.id}) }}">show</a>
                    <a href="{{ path('app_pais_edit', {'id': provincia.id}) }}">edit</a> 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pais_new') }}">Create nuevo pais</a>
</div>
</div>
{% endblock %}
