{% extends 'base.html.twig' %}

{% block title %}Reporte de Provincias{% endblock %}

{% block body %}
    <h1>Reporte de Provincias</h1>

    {% if provincias is not empty %}
        <h2>Resultados</h2>
        <table border="1">
            <thead>
                <tr>
                    <th>Provincia</th>
                    <th>País</th>
                    <th>Población</th>
                    <th>Superficie (km²)</th>
                </tr>
            </thead>
            <tbody>
                {% for provincia in provincias %}
                    <tr>
                        <td>{{ provincia.nombre }}</td>
                        <td>
                            {% if provincia.pais %}
                                {{ provincia.pais.nombre }}
                            {% else %}
                                Sin país
                            {% endif %}
                        </td>
                        <td>{{ provincia.poblacion }}</td>
                        <td>{{ provincia.superficie }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No hay provincias para mostrar.</p>
    {% endif %}
{% endblock %}